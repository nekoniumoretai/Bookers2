<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">
<%= render 'info', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
<h1>Books</h1>
<table class="table table-striped">

  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
<!--ユーザーの詳細-->
  <tbody>
<!-- ユーザーの投稿一覧 -->
<% @books.each do |book| %>
  <tr>
    <td>
      <%= link_to user_path(@user) do %>
      <%= image_tag @user.get_profile_image(100, 100) %>
      <% end %>
    </td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
  </tr>
<% end %>
  </tbody>
</table>
    </div>
  </div>
</div>